@model TestingSystem.Web.Areas.Administration.ViewModels.AnswerViewModel
@{
    ViewBag.Title = "Изтриване на отговор";
}

<div class="vertical-offset-15">
    <div class="panel panel-primary text-center center-x">
        <div class="panel-heading">
            <h1 class="bhoechie-inverse">@ViewBag.Title</h1>
        </div>
        <div class="panel-body">
            <h3>Наистина ли искате да изтриете този отговор?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.QuestionText)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.QuestionText)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Text)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Text)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.IsCorrect)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IsCorrect)
                    </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <br />
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                }
                <br />
                @Html.ActionLink("Обратно към всички отговори", "Index")
                <br />
            </div>
        </div>
    </div>
</div>
