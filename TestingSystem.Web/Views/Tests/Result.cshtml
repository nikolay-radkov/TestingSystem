@model TestingSystem.Web.Models.FinalResultViewModel
@{
    ViewBag.Title = "Резултат";
}
<div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-body text-center">
            <div class="row">
                <h1 class="glyphicon glyphicon-download bhoechie-header bhoechie-icon"></h1>
                <br />
                <h2 class="bhoechie-header">Точки: @string.Format("{0:0.00}", Model.Points)</h2>
            </div>
            <hr />
            <div class="row">
                <h2 class="bhoechie-header">
                    Оценка:
                 
                    @string.Format("{0:0.00}", Model.Grade)
                    @if (5.5 <= Model.Grade)
                    {
                        <strong>Отличен</strong>
                    }
                    else if (4.5 <= Model.Grade && Model.Grade < 5.5)
                    {
                        <strong>Много добър</strong>
                    }
                    else if (3.5 <= Model.Grade && Model.Grade < 4.5)
                    {
                        <strong>Добър</strong>
                    }
                    else if (2.5 <= Model.Grade && Model.Grade < 3.5)
                    {
                        <strong>Среден</strong>
                    }
                    else
                    {
                        <strong>Слаб</strong>
                    }
                </h2>
            </div>
        </div>
    </div>
</div>