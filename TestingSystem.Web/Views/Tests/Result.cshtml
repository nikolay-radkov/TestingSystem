@model double
@{
    ViewBag.Title = "Result";
}
<div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-body text-center">
            <div class="row">
                <h1 class="glyphicon glyphicon-download bhoechie-header bhoechie-icon"></h1>
                <br />
                <h2 class="bhoechie-header">Points: @string.Format("{0:0.00}", Model)</h2>
            </div>
            <hr />
            <div class="row">
                <h2 class="bhoechie-header">
                    Grade:
                    @{var grade = Model / 5 + 2;}
                    @string.Format("{0:0.00}", grade)
                    @if (5.5 < grade)
                    {
                        <strong>Excellent</strong>
                    }
                    else if (4.5 < grade && grade < 5.5)
                    {
                        <strong>Very good</strong>
                    }
                    else if (3.5 < grade && grade < 4.5)
                    {
                        <strong>Good</strong>
                    }
                    else if (2.5 < grade && grade < 3.5)
                    {
                        <strong>Average</strong>
                    }
                    else
                    {
                        <strong>Poor</strong>
                    }
                </h2>
            </div>
        </div>
    </div>
</div>